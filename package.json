{
  "name": "blossom",
  "version": "0.0.1",
  "description": "A minimal classless css import with great taste.",
  "main": "index.js",
  "scripts": {
    "copy-docs": "cp css/blossom.min.css docs  && cp css/test.html docs/index.html",
    "build-min-css": "node-sass sass/blossom.sass css/blossom.min.css --output-style",
    "build-css": "node-sass sass -o css",
    "build": "npm run build-css & npm run build-min-css & npm run copy-docs",
    "watch-dev": "node-sass -w sass/blossom.sass docs/blossom.min.css --output-style",
    "watch": "node-sass -w sass -o css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phrozen/blossom.git"
  },
  "keywords": [
    "css",
    "minimal",
    "design"
  ],
  "author": "Guillermo Estrada",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phrozen/blossom/issues"
  },
  "homepage": "https://github.com/phrozen/blossom#readme",
  "dependencies": {
    "node-sass": "^4.11.0"
  }
}
